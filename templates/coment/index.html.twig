{% extends 'base.html.twig' %}

{% block title %}Coment index{% endblock %}

{% block body %}
    <h1>Coment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coment in coments %}
            <tr>
                <td>{{ coment.id }}</td>
                <td>{{ coment.content }}</td>
                <td>
                    <a href="{{ path('coment_show', {'id': coment.id}) }}">show</a>
                    <a href="{{ path('coment_edit', {'id': coment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coment_new') }}">Create new</a>
{% endblock %}
